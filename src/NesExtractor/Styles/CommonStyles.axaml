<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Стиль для кнопок экспорта -->
    <Style Selector="Button.export-button">
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Background" Value="{DynamicResource SystemAccentColor}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemAccentColorLight3}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15" />
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.export-button:pointerover">
        <Setter Property="Background" Value="{DynamicResource SystemAccentColorDark1}" />
        <Setter Property="RenderTransform" Value="scale(1.02)" />
    </Style>

    <Style Selector="Button.export-button:pressed">
        <Setter Property="RenderTransform" Value="scale(0.98)" />
    </Style>

    <Style Selector="Button.export-button:disabled">
        <Setter Property="Opacity" Value="0.5" />
    </Style>

    <!-- Стиль для кнопок зума -->
    <Style Selector="Button.zoom-button">
        <Setter Property="MinWidth" Value="36" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15" />
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.zoom-button:pointerover">
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundListMediumBrush}" />
    </Style>

    <!-- Стиль для информационных панелей -->
    <Style Selector="Border.info-panel">
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- Стиль для заголовков секций -->
    <Style Selector="TextBlock.section-header">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <!-- Стиль для меток полей -->
    <Style Selector="TextBlock.field-label">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <!-- Стиль для значений полей -->
    <Style Selector="TextBlock.field-value">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- Стиль для иконок в empty state -->
    <Style Selector="PathIcon.empty-state-icon">
        <Setter Property="Width" Value="80" />
        <Setter Property="Height" Value="80" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
        <Setter Property="Opacity" Value="0.5" />
    </Style>

    <!-- Анимация для загрузки -->
    <Style Selector="ProgressBar.loading-indicator">
        <Setter Property="IsIndeterminate" Value="True" />
        <Setter Property="Height" Value="3" />
        <Setter Property="Foreground" Value="{DynamicResource SystemAccentColor}" />
    </Style>

    <!-- Стиль для разделителей -->
    <Style Selector="Separator">
        <Setter Property="Background" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" />
        <Setter Property="Height" Value="1" />
        <Setter Property="Margin" Value="0,8" />
    </Style>

    <!-- Тултипы -->
    <Style Selector="ToolTip">
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" />
    </Style>
</Styles>

