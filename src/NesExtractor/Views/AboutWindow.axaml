<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="using:NesExtractor.Localization"
        x:Class="NesExtractor.Views.AboutWindow"
        Width="420" Height="260"
        CanResize="False"
        Title="{l:Loc About.Title}">
    <Border Padding="16">
        <Grid RowDefinitions="Auto,* ,Auto">
            <StackPanel Spacing="4">
                <TextBlock Text="{l:Loc About.AppName}" FontSize="20" FontWeight="SemiBold" />
                <TextBlock Text="{l:Loc About.Description}" TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel Grid.Row="1" Spacing="8" Margin="0,12,0,0">
                <TextBlock x:Name="VersionText" />
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="{l:Loc About.Close}" Width="96" IsDefault="True" Click="OnCloseClick" />
            </StackPanel>
        </Grid>
    </Border>
</Window>


